# Server configuration
PORT=4000
BASE_URL=http://localhost:4000

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:4432/k7notes

# CORS configuration
CORS_ORIGIN=http://localhost:4001

# Google OAuth (get from Google Cloud Console -> APIs & Services -> Credentials)
# Create OAuth 2.0 Client ID (Web application)
# Add redirect URI: http://localhost:4000/api/auth/callback/google
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Calendar Integration
# Set to "true" to use mock calendar providers (for local development without real API keys)
USE_CALENDAR_MOCKS=true

# Google Calendar API (get from Google Cloud Console -> APIs & Services -> Credentials)
# Create OAuth 2.0 Client ID (Web application)
# Enable Google Calendar API in the project
# Add redirect URI: http://localhost:4000/api/calendar/oauth/callback
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# Microsoft Calendar API (get from Azure Portal -> App registrations)
# Create app registration
# Add redirect URI: http://localhost:4000/api/calendar/oauth/callback
# Add API permissions: Calendars.Read, User.Read
MICROSOFT_CALENDAR_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CALENDAR_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# Speech-to-Text Transcription
# =============================================================================

# OpenAI API Key (required for speech-to-text transcription)
# Get from: https://platform.openai.com/api-keys
# Used for gpt-4o-transcribe-diarize model
OPENAI_API_KEY=sk-your-openai-api-key
