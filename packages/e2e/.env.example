# E2E Test Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================

# Test database URL (REQUIRED - no fallback to prevent accidental dev DB usage)
# Use a SEPARATE database from development to avoid data pollution
# The test database will be seeded and cleaned during test runs
#
# Example: postgresql://postgres:postgres@localhost:4432/k7notes_test
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:4432/k7notes_test

# NOTE: Playwright automatically starts the API and web servers with the test
# database when you run tests. Just run:
#   pnpm test:e2e
#
# If servers are already running, Playwright will reuse them (unless in CI mode)

# =============================================================================
# Application URLs
# =============================================================================

# API base URL (used for API tests and health checks)
# Default: http://localhost:4000
API_BASE_URL=http://localhost:4000

# Web app base URL (used for browser tests)
# Default: http://localhost:4001
WEB_BASE_URL=http://localhost:4001

# =============================================================================
# Test Configuration
# =============================================================================

# Run tests in headed mode (show browser window)
# Default: false (headless)
# HEADED=true

# Number of parallel workers for Playwright
# Default: uses Playwright's default (typically 50% of CPU cores)
# WORKERS=4

# Timeout for each test in milliseconds
# Default: 30000 (30 seconds)
# TEST_TIMEOUT=30000

# =============================================================================
# CI Configuration
# =============================================================================

# Set to true when running in CI environment
# This enables CI-specific optimizations (single worker, retries, etc.)
# CI=true

# =============================================================================
# Debug Configuration
# =============================================================================

# Enable Playwright debug mode
# PWDEBUG=1

# Enable verbose logging
# DEBUG=pw:api
