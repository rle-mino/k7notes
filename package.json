{
  "name": "k7notes",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e --filter=@k7notes/e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.4"
  },
  "lint-staged": {
    "packages/api/**/*.ts": [
      "eslint --fix"
    ],
    "packages/mobile/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/e2e/**/*.ts": [
      "eslint --fix"
    ],
    "packages/**/*.{ts,tsx}": [
      "bash -c 'pnpm type-check'"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "helmet": "patches/helmet.patch"
    }
  }
}
